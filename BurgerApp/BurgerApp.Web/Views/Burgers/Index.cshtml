@model List<BurgerViewModel>
@{
    ViewData["Title"] = "Burgers";
}

<a asp-action="Create" class="btn btn-outline-warning">Create New Burger</a>
<br />
<br />

<div class="row row-cols-1 row-cols-md-4 g-4">
    @foreach (var burger in Model)
    {
        <div class="col">
            <div class="card h-100" style="border:1.5px solid gold;">
                <img src="@burger.ImageUrl" height="200px" class="card-img-top" alt="@burger.Name">
                <div class="card-body">
                    <h5 class="card-title text-warning">@burger.Name</h5>
                    <p class="card-text" style="height:120px;">@burger.Description</p>
                    <p class="card-text text-danger">@burger.Price MKD</p>
                    <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@burger.Id">Edit</a>
                    <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@burger.Id">Delete</a>
                </div>
            </div>
        </div>
    }
</div>