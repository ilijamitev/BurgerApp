@model EditOrderViewModel
@{
    ViewData["Title"] = "Edit Order";
}


<h2 class="text-center text-warning">Edit Order</h2>


<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="@Model.Id" />
            <div class="mb-3">
                @Html.LabelFor(x=>x.PaymentMethod)
                <select asp-for="@Model.PaymentMethod" asp-items="@Html.GetEnumSelectList<BurgerApp.Domain.Enums.PaymentMethod>()"></select>
            </div>
            <div class="mb-3">
                @Html.LabelFor(x=>x.IsDelivered)
                <select class="form-control" asp-for="@Model.IsDelivered">
                    <option value="true">Yes</option>
                    <option value="false">No</option>
                </select>
            </div>
            <button class="btn btn-outline-warning" type="submit">Edit Order</button>
        </form>
    </div>
</div>
<br />


<a class="btn btn-outline-secondary" asp-controller="Orders" asp-action="Index">Back</a>
